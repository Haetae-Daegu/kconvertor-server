                "responses": {
                    "200": {
                        "description": "Accommodation archived successfully",
                        "schema": {
                            "$ref": "#/definitions/Accommodation"
                        }
                    },
                    "404": {
                        "description": "Accommodation not found"
                    }
                }
            }
        }
