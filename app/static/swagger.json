                    },
                    "400": {
                        "description": "Invalid input data"
                    }
                }
            }
        },
        "/accommodations/{id}": {
            "get": {
                "summary": "Get a specific accommodation",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
